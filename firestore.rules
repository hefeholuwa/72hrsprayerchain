rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is an admin
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.email in ['admin@yfcm.org', 'leadership@yfcm.org', 'ajogbejei@gmail.com'];
    }

    // Helper to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- USERS COLLECTION ---
    match /users/{uid} {
      allow read: if true; // Allowed for profile display/presence
      allow create: if request.auth != null && isOwner(uid);
      allow update: if request.auth != null && isOwner(uid);
      allow delete: if isAdmin();
    }

    // --- COMMITMENTS COLLECTION ---
    match /commitments/{commitId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
    }

    // --- ACTIVITY COLLECTION ---
    match /activity/{actId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }

    // --- PRAYERS COLLECTION ---
    match /prayers/{prayerId} {
      allow read: if true;
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // --- ACTIVE SESSIONS (PRESENCE) ---
    match /active_sessions/{uid} {
      allow read: if true;
      allow write: if request.auth != null && isOwner(uid);
    }

    // --- ALTAR INTERACTIONS (BURSTS, PROMPTINGS, FOCUS) ---
    match /altar_interactions/{docId} {
      allow read: if true;
      allow create: if true; // Allow anonymous reactions in Altar Room
    }

    // --- WATCHES (24-HOUR WATCH COMMITMENTS) ---
    match /watches/{watchId} {
      allow read: if true;
      allow write: if request.auth != null; // Handle specific watchId logic in code
    }

    // --- CONFIGURATION ---
    match /config/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}